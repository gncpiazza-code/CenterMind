# ============================================================
# ShelfMind — Plantilla de Secretos para Streamlit Cloud
# ============================================================
# INSTRUCCIONES:
#   1. Copia este archivo y renómbralo a "secrets.toml" (solo para desarrollo local)
#   2. Para producción, ve a tu app en Streamlit Cloud → Settings → Secrets
#      y pega cada sección directamente en el editor.
#
# NUNCA subas secrets.toml a GitHub (ya está en .gitignore).
# ============================================================

# ── Conexión con tu API local (expuesta via Cloudflare Tunnel) ────────────────
# Reemplaza con la URL que te genera Cloudflare (o "http://localhost:8000" en dev local)
API_URL = "https://TU-SUBDOMINIO.trycloudflare.com"

# Clave secreta que configuraste en SHELFMIND_API_KEY al arrancar api.py
API_KEY = "CAMBIA-ESTA-CLAVE-SECRETA"


# ── Credenciales de Google Drive (Service Account) ────────────────────────────
# Copia aquí el contenido de tu archivo JSON de cuenta de servicio de Google.
# Puedes encontrarlo en: Google Cloud Console → IAM → Cuentas de servicio → Claves
#
# Ejemplo de formato (los valores son ficticios):
[google_credentials]
type                        = "service_account"
project_id                  = "tu-proyecto-123456"
private_key_id              = "abc123def456..."
private_key                 = "-----BEGIN RSA PRIVATE KEY-----\nMIIEo...\n-----END RSA PRIVATE KEY-----\n"
client_email                = "shelfmind-bot@tu-proyecto-123456.iam.gserviceaccount.com"
client_id                   = "123456789012345678901"
auth_uri                    = "https://accounts.google.com/o/oauth2/auth"
token_uri                   = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url        = "https://www.googleapis.com/robot/v1/metadata/x509/shelfmind-bot%40tu-proyecto-123456.iam.gserviceaccount.com"
universe_domain             = "googleapis.com"
